<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:elevation="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txt_officer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Officer Name goes here "
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txt_monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday duty goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txt_tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuesday duty goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txt_wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wednesday duty"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:ellipsize="end"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txt_thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday duty goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txt_friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Friday duty goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txt_saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saturday duty goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/txt_sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sunday duty goes here"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="20"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textSize="15sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>